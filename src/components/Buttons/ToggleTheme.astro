---
import Dark from "components/Icons/DarkIcon.astro";
import Light from "components/Icons/LightIcon.astro";
---

<div class="text-xl" id="themeToggle">
  <button
    type="button"
    class="relative place-items-center *:size-8 md:*:size-7 *:stroke-2 after:absolute after:h-0.5 after:-bottom-0.5 after:left-0 after:bg-mine-shaft-900 dark:after:bg-mine-shaft-100 hover:after:w-full after:transition-all after:duration-300 bg-transparent border-none cursor-pointer p-3 md:p-2 rounded min-h-11 min-w-11"
    aria-label="Toggle dark/light theme"
  >
    <Dark />
    <Light />
  </button>

  <script>
    // Event handlers (pueden ser diferidos)
    document.addEventListener("astro:page-load", () => {
      const handleToggleClick = () => {
        const element = document.documentElement;
        element.classList.toggle("dark");

        const isDark = element.classList.contains("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");

        // Actualizar aria-label del botÃ³n
        const button = document.querySelector("#themeToggle button");
        if (button) {
          button.setAttribute(
            "aria-label",
            isDark ? "Switch to light theme" : "Switch to dark theme"
          );
        }
      };

      const themeToggle = document.getElementById("themeToggle");
      if (themeToggle) {
        themeToggle.addEventListener("click", handleToggleClick);

        // Configurar aria-label inicial
        const button = themeToggle.querySelector("button");
        const isDark = document.documentElement.classList.contains("dark");
        if (button) {
          button.setAttribute(
            "aria-label",
            isDark ? "Switch to light theme" : "Switch to dark theme"
          );
        }
      }
    });

    document.addEventListener("astro:after-swap", () => {
      localStorage.theme === "dark"
        ? document.documentElement.classList.add("dark")
        : document.documentElement.classList.remove("dark");
    });
  </script>
</div>
