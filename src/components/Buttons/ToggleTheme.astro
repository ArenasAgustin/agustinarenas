---
import Dark from "components/Icons/DarkIcon.astro";
import Light from "components/Icons/LightIcon.astro";
---

<div class="text-xl" id="themeToggle">
  <button
    type="button"
    class="relative place-item-center *:size-7 md:*:size-7 *:stroke-2 after:absolute after:h-0.5 after:-bottom-0.5 after:left-0 after:bg-mine-shaft-900 dark:after:bg-mine-shaft-100 hover:after:w-full after:transition-all after:duration-300 bg-transparent border-none cursor-pointer p-2 rounded"
    aria-label="Toggle dark/light theme"
  >
    <Dark />
    <Light />
  </button>

  <script is:inline>
    // Inicialización del tema (debe ser bloqueante para evitar FOUC)
    (function () {
      const theme = (() => {
        if (
          typeof window !== "undefined" &&
          window.location.href.includes("theme=light")
        ) {
          return "light";
        } else if (
          typeof window !== "undefined" &&
          window.location.href.includes("theme=dark")
        ) {
          return "dark";
        } else if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        } else if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "light") {
        document.documentElement.classList.remove("dark");
      } else {
        document.documentElement.classList.add("dark");
      }

      window.localStorage.setItem("theme", theme);
    })();
  </script>

  <script>
    // Event handlers (pueden ser diferidos)
    document.addEventListener("astro:page-load", () => {
      const handleToggleClick = () => {
        const element = document.documentElement;
        element.classList.toggle("dark");

        const isDark = element.classList.contains("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");

        // Actualizar aria-label del botón
        const button = document.querySelector("#themeToggle button");
        if (button) {
          button.setAttribute(
            "aria-label",
            isDark ? "Switch to light theme" : "Switch to dark theme"
          );
        }
      };

      const themeToggle = document.getElementById("themeToggle");
      if (themeToggle) {
        themeToggle.addEventListener("click", handleToggleClick);

        // Configurar aria-label inicial
        const button = themeToggle.querySelector("button");
        const isDark = document.documentElement.classList.contains("dark");
        if (button) {
          button.setAttribute(
            "aria-label",
            isDark ? "Switch to light theme" : "Switch to dark theme"
          );
        }
      }
    });

    document.addEventListener("astro:after-swap", () => {
      localStorage.theme === "dark"
        ? document.documentElement.classList.add("dark")
        : document.documentElement.classList.remove("dark");
    });
  </script>
</div>
