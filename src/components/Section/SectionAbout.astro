---
import Section from "./Section.astro";

const { id, title, extraClass } = Astro.props;
---

<Section id={id} title={title} extraClass={extraClass} direction="row">
  <div class="flex flex-col items-center justify-center w-1/2 h-full">
    <slot name="slot1" />
  </div>

  <div class="flex flex-col items-center justify-center w-1/2 h-full">
    <slot name="slot2" />
  </div>
</Section>
