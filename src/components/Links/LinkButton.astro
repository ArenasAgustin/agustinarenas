---
interface Props {
  href: string;
  targetBlank?: boolean;
  extraClass?: string;
}

const { href, targetBlank = false, extraClass = "" } = Astro.props;
---

<a
  class={`bg-tradewind-600 px-4 py-2 rounded-3xl cursor-pointer font-semibold transition-all duration-400 hover:-translate-y-px hover:bg-tradewind-500 ${extraClass}`}
  style="color: #ffffff;"
  href={href}
  target={targetBlank ? "_blank" : undefined}
  rel={targetBlank ? "noopener noreferrer" : undefined}
>
  <slot />
</a>
