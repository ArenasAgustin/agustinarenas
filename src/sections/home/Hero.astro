---
import Section from "components/Section/Section.astro";
import GlowCard from "components/Card/GlowCard.astro";
import LinkIcon from "components/Links/LinkIcon.astro";
import LinkedinIcon from "components/Icons/LinkedinIcon.astro";
import GithubIcon from "components/Icons/GithubIcon.astro";
import ContactIcon from "components/Icons/ContactIcon.astro";
import CvIcon from "components/Icons/CvIcon.astro";
import { CONTACT_INFO } from "@/constants/contact";
---

<Section extraClass="h-screen relative" id="home">
  <GlowCard name="hero">
    <h1 class="text-5xl md:text-7xl text-center font-bold m-0 mb-4">
      Hi, I'm Agust√≠n Arenas
    </h1>
    <p class="text-2xl">Software Developer</p>

    <div class="flex-center-center">
      <LinkIcon href={CONTACT_INFO.github} ariaLabel="Github">
        <GithubIcon />
      </LinkIcon>

      <LinkIcon href={CONTACT_INFO.linkedin} ariaLabel="Linkedin">
        <LinkedinIcon />
      </LinkIcon>

      <LinkIcon
        href={`mailto:${CONTACT_INFO.email}`}
        ariaLabel="Contact"
        targetBlank={false}
      >
        <ContactIcon />
      </LinkIcon>

      <LinkIcon href={CONTACT_INFO.cv} ariaLabel="Cv">
        <CvIcon />
      </LinkIcon>
    </div>
  </GlowCard>

  <div
    class="w-5 h-8 border-2 border-opacity-100 border-b-mine-shaft-900 dark:border-b-mine-shaft-100 rounded-xl absolute bottom-5 left-1/2"
  >
    <div
      class="w-1 h-1 bg-mine-shaft-900 dark:bg-mine-shaft-100 rounded-full absolute top-1 left-1/2 animate-scroll"
    >
    </div>
  </div>
</Section>
