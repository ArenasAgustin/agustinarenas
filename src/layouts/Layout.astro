---
import ContactLink from "components/Links/ContactLink.astro";
// import CvLink from "components/Links/CvLink.astro";
import GithubLink from "components/Links/GithubLink.astro";
import LinkedinLink from "components/Links/LinkedinLink.astro";
import ToggleTheme from "components/Buttons/ToggleTheme.astro";
import Link from "components/Links/Link.astro";
import { ViewTransitions } from "astro:transitions";
import "@/styles/global.css";
import "@/styles/stars.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta
      name="description"
      content="This is my portfolio. I'm a programmer and web developer with problem-solving skills, imaginative, and curious."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://agustinarenas.vercel.app/" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="This is my portfolio. I'm a programmer and web developer with problem-solving skills, imaginative, and curious."
    />
    <meta property="og:image" content="https://res.cloudinary.com/df7zuvuxu/image/upload/v1711677643/Captura_de_pantalla_2024-03-28_224304_q683qd.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://agustinarenas.vercel.app/" />
    <meta property="twitter:title" content={title} />
    <meta
      property="twitter:description"
      content="This is my portfolio. I'm a programmer and web developer with problem-solving skills, imaginative, and curious."
    />
    <meta property="twitter:image" content="https://res.cloudinary.com/df7zuvuxu/image/upload/v1711677643/Captura_de_pantalla_2024-03-28_224304_q683qd.png" />

    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta name="generator" content={Astro.generator} />

    <ViewTransitions />
  </head>

  <body
    class="relative overflow-x-hidden background-image bg-mine-shaft-100 text-mine-shaft-900 dark:bg-mine-shaft-900 dark:text-mine-shaft-100"
  >
    <header
      class="flex justify-center align-middle fixed w-full z-30 bg-clip-padding backdrop-filter backdrop-blur-xl bg-mine-shaft-200/60 dark:bg-mine-shaft-950/60 border-none"
    >
      <Link href="/" extraClass="capitalize" underlined={true}>Home</Link>

      <Link href="/about" extraClass="capitalize" underlined={true}>About</Link>

      <Link href="/portfolio" extraClass="capitalize" underlined={true}>
        Portfolio
      </Link>

      <!-- <Link href="/contact" extraClass="capitalize" underlined={true}>
        Contact
      </Link> -->
    </header>
    <main class="flex-center-center flex-col w-full">
      <slot />
    </main>

    <footer class="w-full p-4 flex justify-center items-center flex-col">
      <div class="flex-center-center">
        <GithubLink />

        <LinkedinLink />

        <ContactLink />

        <!-- <CvLink /> -->

        <ToggleTheme />
      </div>

      <hr class="w-5/6 md:w-3/5 my-2 text-bunker-800" />

      <p class="text-center text-xs text-white">© 2024 Agustín Arenas</p>
    </footer>

    <div class="starsContainer">
      <div class="stars"></div>
      <div class="stars2"></div>
      <div class="stars3"></div>
    </div>
  </body>
</html>
