---
import ContactButton from "../components/Buttons/ContactButton.astro";
import CvButton from "../components/Buttons/CvButton.astro";
import GithubButton from "../components/Buttons/GithubButton.astro";
import LinkedinButton from "../components/Buttons/LinkedinButton.astro";
import Link from "../components/Links/Link.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <meta name="description" content="Astro description" />

    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
  </head>

  <body class="bg-bunker-900 text-polar-50">
    <header
      class="flex justify-center align-middle fixed w-full z-30 bg-clip-padding backdrop-filter backdrop-blur-xl border bg-bunker-800/75 border-bunker-800"
    >
      <Link href="/" extraClass="capitalize">Home</Link>

      <Link href="/about" extraClass="capitalize">About</Link>

      <Link href="/blog" extraClass="capitalize">Portfolio</Link>

      <Link href="/contact" extraClass="capitalize">Contact</Link>
    </header>

    <slot />

    <footer
      class="w-full bg-bunker-900 p-4 flex justify-center items-center flex-col"
    >
      <div class="flex space-x-4">
        <GithubButton />

        <LinkedinButton />

        <ContactButton />

        <CvButton />
      </div>

      <hr class="w-3/5 my-2 text-bunker-800" />

      <p class="text-center text-xs text-white">© 2024 Agustín Arenas</p>
    </footer>
  </body>
</html>
