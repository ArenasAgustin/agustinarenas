---
import Header from "components/Header.astro";
import Footer from "@/components/Footer.astro";
import SnowFlakes from "@/components/SnowFlakes.astro";
import ScrollToTop from "@/components/Buttons/ScrollToTop.astro";
import { ClientRouter } from "astro:transitions";
import "@/styles/global.css";
import "@/styles/stars.css";
import { CONTACT_INFO } from "@/constants/contact";

interface Props {
  title: string;
  description?: string;
  image?: string;
  schema?: Record<string, any>;
}

const {
  title = "Agustín Arenas | Software Developer",
  description = "This is my portfolio. I'm a programmer and web developer with problem-solving skills, imaginative, and curious.",
  image = "/img/meta-home.webp",
  schema,
} = Astro.props;

const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site || CONTACT_INFO.site
);
const ogImageURL = new URL(image, Astro.site || CONTACT_INFO.site);

const baseSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Agustín Arenas",
  url: CONTACT_INFO.site,
  image: `${CONTACT_INFO.site}/img/meta-home.webp`,
  jobTitle: "Software Developer",
  description:
    "Full Stack Developer with expertise in web development, problem-solving, and open source contributions",
  sameAs: [CONTACT_INFO.github, CONTACT_INFO.linkedin],
  knowsAbout: [
    "JavaScript",
    "TypeScript",
    "React",
    "Node.js",
    "HTML",
    "CSS",
    "Sass",
    "Tailwind CSS",
    "MongoDB",
    "MySQL",
    "PostgreSQL",
  ],
  alumniOf: {
    "@type": "EducationalOrganization",
    name: "Universidad Nacional de La Matanza",
  },
  nationality: {
    "@type": "Country",
    name: "Argentina",
  },
};
---

<!doctype html>
<html lang="en" class="w-full" style="scroll-behavior: smooth;">
  <head>
    <script is:inline>
      // Inicialización del tema (DEBE ejecutarse antes del render para evitar FOUC)
      (function () {
        const getTheme = () => {
          // 1. Prioridad a parámetro URL
          if (typeof window !== "undefined") {
            const urlParams = new URLSearchParams(window.location.search);
            const urlTheme = urlParams.get("theme");
            if (urlTheme === "light" || urlTheme === "dark") return urlTheme;
          }

          // 2. Prioridad a localStorage
          if (typeof localStorage !== "undefined") {
            const stored = localStorage.getItem("theme");
            if (stored === "light" || stored === "dark") return stored;
          }

          // 3. Fallback a preferencia del sistema
          if (typeof window !== "undefined" && window.matchMedia) {
            if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
              return "dark";
            }
            if (window.matchMedia("(prefers-color-scheme: light)").matches) {
              return "light";
            }
          }

          // 4. Fallback final
          return "dark";
        };

        const theme = getTheme();
        const root = document.documentElement;

        if (theme === "dark") {
          root.classList.add("dark");
        } else {
          root.classList.remove("dark");
        }

        // Persistir en localStorage
        try {
          localStorage.setItem("theme", theme);
        } catch (e) {
          // Ignorar errores de localStorage (modo privado, etc.)
        }
      })();
    </script>

    <link
      rel="preload"
      href="font/junction-regular.woff"
      as="font"
      type="font/woff"
      crossorigin
    />

    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <link rel="canonical" href={canonicalURL} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta name="og:site_name" content="Agustín Arenas Portfolio" />
    <meta name="og:locale" content="en_US" />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/webp" />
    <meta property="og:image:alt" content={title} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="" />
    <meta name="twitter:creator" content="" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageURL} />
    <meta property="twitter:image:alt" content={title} />

    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#262626" />

    <meta
      name="keywords"
      content="portfolio, full stack, frontend, front-end, web, develop, programmer, agustin areanas"
    />

    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="bingbot" content="index, follow" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png" />

    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <meta name="msapplication-config" content="/browserconfig.xml" />

    <script
      type="application/ld+json"
      set:html={JSON.stringify(schema || baseSchema)}
    />

    <meta name="generator" content={Astro.generator} />

    <ClientRouter fallback="none" />
    <script>
      // Prefetch pages on hover for faster navigation
      document.addEventListener("astro:page-load", () => {
        const prefetchableLinks = document.querySelectorAll(
          'a[data-astro-prefetch="hover"]'
        );
        prefetchableLinks.forEach((link) => {
          link.addEventListener("mouseenter", () => {
            const href = link.getAttribute("href");
            if (
              href &&
              !document.querySelector(`link[rel="prefetch"][href="${href}"]`)
            ) {
              const prefetchLink = document.createElement("link");
              prefetchLink.rel = "prefetch";
              prefetchLink.href = href;
              document.head.appendChild(prefetchLink);
            }
          });
        });
      });
    </script>
  </head>

  <body
    class="relative w-full min-h-screen overflow-x-hidden background-image bg-mine-shaft-100 text-mine-shaft-900 dark:bg-mine-shaft-900 dark:text-mine-shaft-100 font-junction scrollbar transition-all duration-300 *:transition-all *:duration-300"
  >
    <Header />

    <main class="flex-center-center flex-col w-full">
      <slot />
    </main>

    <Footer />

    <div class="starsContainer">
      <div class="stars"></div>
      <div class="stars2"></div>
      <div class="stars3"></div>
    </div>

    <SnowFlakes />
    <ScrollToTop />
  </body>
</html>
